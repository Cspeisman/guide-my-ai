{
  "name": "oauth2-server-bun",
  "version": "1.0.0",
  "description": "OAuth2 server implementation using Bun",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun run src/server.ts",
    "test": "bun test",
    "build:assets": "bun run scripts/build-assets.ts && bunx @tailwindcss/cli -i ./src/input.css -o ./dist/css/output.css",
    "build:assets:watch": "bun run scripts/build-assets.ts --watch & bunx @tailwindcss/cli -i ./src/input.css -o ./dist/css/output.css --watch & wait",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "keywords": [
    "oauth2",
    "bun",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@paralleldrive/cuid2": "^3.0.4",
    "@remix-run/fetch-router": "^0.13.0",
    "@remix-run/response": "^0.2.0",
    "@tailwindcss/cli": "^4.1.18",
    "better-auth": "^1.4.6",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-select": "^5.10.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-select": "^5.0.1",
    "happy-dom": "^20.0.11"
  }
}
